{
  "name": "ghosttext",
  "displayName": "GhostText",
  "description": "Write in the browser with VSCode",
  "publisher": "fregante",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "xo": {
    "prettier": true
  },
  "contributes": {
    "configuration": {
      "title": "GhostText",
      "properties": {
        "ghosttext.serverPort": {
          "type": "number",
          "default": 4001,
          "minimum": 0,
          "description": "The port to open for the browser extension to connect to VS Code (default: 4001)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "xo"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "typescript": "^4.9.5",
    "xo": "^0.53.1"
  },
  "dependencies": {
    "get-port": "^5.1.1",
    "ws": "^8.13.0"
  }
}
